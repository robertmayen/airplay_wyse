#!/usr/bin/env bash
set -euo pipefail

echo "===== converge diagnostics: status ====="
systemctl status --no-pager converge.service || true
echo "===== end status ====="

echo
echo "===== converge diagnostics: recent logs (last 150) ====="
journalctl -u converge.service -n 150 --no-pager || true
echo "===== end recent logs ====="

