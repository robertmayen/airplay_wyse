# Managed by repo. Install via visudo -f /etc/sudoers.d/airplay-wyse
# Minimal rules to support converge v0.1.8 while keeping least privilege.

airplay ALL=(root) NOPASSWD: /usr/bin/install *
airplay ALL=(root) NOPASSWD: /usr/bin/apt-get update
airplay ALL=(root) NOPASSWD: /usr/bin/apt-get install *

# Service control for core daemons
airplay ALL=(root) NOPASSWD: /usr/bin/systemctl enable nqptp.service
airplay ALL=(root) NOPASSWD: /usr/bin/systemctl enable shairport-sync.service
airplay ALL=(root) NOPASSWD: /usr/bin/systemctl enable avahi-daemon.service
airplay ALL=(root) NOPASSWD: /usr/bin/systemctl start nqptp.service
airplay ALL=(root) NOPASSWD: /usr/bin/systemctl restart shairport-sync.service
airplay ALL=(root) NOPASSWD: /usr/bin/systemctl restart avahi-daemon.service
airplay ALL=(root) NOPASSWD: /usr/bin/systemctl try-restart shairport-sync.service
airplay ALL=(root) NOPASSWD: /usr/bin/systemctl try-restart avahi-daemon.service
